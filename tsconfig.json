{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "types": ["typed-factorio/runtime", "jest"],
    "strict": true,
  },
  "tstl": {
    "luaTarget": "5.2",
    "noImplicitSelf": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "jest.config.ts"]
}